    "connect-redis": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "glob": "^7.1.6",
    "knex": "^0.21.2",
    "morgan": "^1.10.0",
    "node-sass": "^4.14.1",
    "objection": "^2.2.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg": "^8.3.0",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.4",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.2.0",
    "faker": "^4.1.0",
    "mocha": "^8.0.1",
    "mocha-cli": "^1.0.1",
    "nodemon": "^2.0.4",
    "should": "^13.2.3",
    "simple-knex-fixtures": "^2.0.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ]
  },
  "nodemonConfig": {
    "ext": "js,mjs,jsx,json,scss",
    "ignore": [
      "dist/*"
    ]
  },
  "scripts": {
    "heroku-postbuild": "cd client && yarn && yarn run build",
    "start": "node app",
    "client": "cd client && yarn start",
    "server": "nodemon app.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "console": "node --experimental-repl-await toolbox/console.js",
    "test": "bash test/lib/test.sh",
    "test:behav": "bash test/lib/test.sh behavior",
    "test:unit": "bash test/lib/test.sh models"
  }
